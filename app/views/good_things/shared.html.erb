<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <% if eligible_for_compliments? %>
        <% @shared_good_things.each do |item| %>
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <p class="mb-1 fw-bold" style="color: #3a7f5d;">作成者: <%= item.user.name %>さん</p>

              <p class="mb-1"><%= item.content %></p>

              <!-- <% if item.praise.present? %>
                <p class="mb-1 text-success small">🌱 <%= item.praise %></p>
              <% end %> -->

              <small class="text-muted"><%= l item.created_at, format: :short %></small>

              <hr class="my-3" style="border-color: #cce3d5;">

              <!-- コメント投稿フォーム -->
              <%= form_with model: @compliment, url: good_thing_compliments_path(item.id), local: true do |f| %>

                <div class="mt-3">
                  <%= label_tag :content, "ひとこと", class: "form-label" %>
                  <%= f.text_field :content, class: "form-control", placeholder: "やさしい気づき、いいね！" %>
                </div>

                <div class="mt-2">
                  <%= f.submit "褒める", class: "btn btn-sm btn-outline-success" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <small class="text-muted">※褒めるには3日分の記録が必要です</small>
      <% end %>

    </div>
  </div>
</div>