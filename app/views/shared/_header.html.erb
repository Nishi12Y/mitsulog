<header class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
  <div class="container-fluid">
    <div class="navbar-brand d-flex align-items-center gap-2">
      <%= image_tag 'mitsulog_logo.png', alt: 'mitsulog logo', height: '40' %>
      <span class="fw-bold text-success fs-4">ミツログ</span>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarLinks" aria-controls="navbarLinks" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarLinks">
      <ul class="navbar-nav gap-2 mt-3 mt-lg-0 nav nav-underline">
        <% if logged_in? %>
           <li class="nav-item">
            <%= link_to '一覧', good_things_path, class: 'nav-link text-success' %>
          </li>
          <li class="nav-item">
            <%= link_to '投稿広場', shared_good_things_path, class: 'nav-link text-success' %>
          </li>
          <li class="nav-item">
            <%= link_to '記録する', new_good_thing_path, class: 'nav-link text-success' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete }, class: 'btn btn-success btn-light-green' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'ログイン', login_path, class: 'btn btn-light-green' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>